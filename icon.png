  <text x="50" y="38" font-family="Arial, sans-serif" font-size="11" font-weight="900" fill="white" opacity="0.95">TRACKER</text>

  <!-- Avatar circle -->
  <circle cx="64" cy="58" r="14" fill="#bfdbfe"/>
  <circle cx="64" cy="54" r="6" fill="#0a66c2"/>
