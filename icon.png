  <!-- Name line -->
  <rect x="30" y="76" width="68" height="5" rx="2.5" fill="#0a66c2" opacity="0.15"/>

  <!-- Status pill -->
  <rect x="34" y="86" width="60" height="12" rx="6" fill="#22c55e" opacity="0.9"/>
